
<%= render 'messages' %>

<html>
<title> Blog </title>
<head>
<style>
table th{
    padding-left: 25px;
   
}
table td{
    padding-top: 10px;
    padding-left: 25px;
    
}
</style>
</head> 
<h1> Showing Article Details : </h1>
<body>
  
<table>
<thead>
<tr>
<th>Title</th>
<th>Description</th>
<th>Author</th>
<th colspan= "3">Actions</th>
</tr>
</thead>

<% @articles.each do |article| %>
<tbody>
<tr>
<td> <%= article.title %></td>
<td> <%= article.des %></td>
<td> <%= article.author %></td>
<td style="padding-top:30px;"> <%= button_to 'Show', article_path(article), method: :get %></td>
<td style="padding-top:30px;"> <%= button_to 'Edit', edit_article_path(article), method: :get %></td>
<td style="padding-top:30px;"> <%= button_to 'Delete', article_path(article), method: :delete%></td>
</tr>
</tbody>
<% end %>
</table>
 
<br>
<br>
<%= link_to 'create new article', new_article_path %>

</body>

</html>